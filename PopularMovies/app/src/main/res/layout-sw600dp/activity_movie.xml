<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <fragment android:id="@+id/main_activity_fragment"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:name="com.example.android.pouplarmovies.MovieActivityFragment"
        xmlns:android="http://schemas.android.com/apk/res/android" />

    <LinearLayout
        android:id="@+id/movie_linear_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/poster_image_detail"
                android:layout_width="match_parent"
                android:layout_height="477dp" />

            <TextView
                android:id="@+id/title_detail"
                style="@style/Base.TextAppearance.AppCompat.Display1"
                android:layout_marginLeft="37dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/release_date_detail"
                style="@style/Base.TextAppearance.AppCompat.Headline"
                android:layout_marginLeft="37dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/vote_average_detail"
                style="@style/Base.TextAppearance.AppCompat.Headline"
                android:layout_marginLeft="37dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/synopsis_detail"
                android:layout_marginLeft="37dp"
                android:textSize="21sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>